{
	"name": "DF_orderDetails_toDB",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "LS_csv_inputfolder",
						"type": "LinkedServiceReference"
					},
					"name": "orderData"
				},
				{
					"linkedService": {
						"referenceName": "LS_csv_inputfolder",
						"type": "LinkedServiceReference"
					},
					"name": "orderData2"
				},
				{
					"linkedService": {
						"referenceName": "LS_csv_inputfolder",
						"type": "LinkedServiceReference"
					},
					"name": "orderData3"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable2",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "filter1"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "union1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {_col0_} as string,",
				"          {_col1_} as string,",
				"          {_col2_} as string,",
				"          {_col3_} as string,",
				"          {_col4_} as string,",
				"          {_col5_} as string,",
				"          {_col6_} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'excel',",
				"     container: 'input-folder',",
				"     fileName: '240824_orderdetails.xlsx',",
				"     sheetName: 'Sheet1',",
				"     firstRowAsHeader: false) ~> orderData",
				"source(output(",
				"          {_col0_} as string,",
				"          {_col1_} as string,",
				"          {_col2_} as string,",
				"          {_col3_} as string,",
				"          {_col4_} as string,",
				"          {_col5_} as string,",
				"          {_col6_} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'excel',",
				"     container: 'input-folder',",
				"     fileName: '240825_orderdetails.xlsx',",
				"     sheetName: 'Sheet1',",
				"     firstRowAsHeader: false) ~> orderData2",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'excel',",
				"     container: 'input-folder',",
				"     fileName: '240826_orderdetails.xlsx',",
				"     sheetName: 'Sheet1',",
				"     firstRowAsHeader: false) ~> orderData3",
				"union1 filter({_col3_}>='1' && {_col3_}<='3') ~> filter1",
				"filter1 derive(Amount = toInteger({_col3_})*toInteger({_col5_})) ~> derivedColumn1",
				"orderData, orderData2, orderData3 union(byName: true)~> union1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}